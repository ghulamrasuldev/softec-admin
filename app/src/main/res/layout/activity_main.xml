<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple_500"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOFTEC ADMIN"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntu_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/add_stall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="Add Stall"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_bold"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>

        <TextView
            android:id="@+id/add_competition"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:text="See Stalls"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_bold"
            android:background="@drawable/ripple_effect"
            android:clickable="true"/>


    </LinearLayout>

    <TextView
        android:id="@+id/payment_requests"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="Review Payments"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:background="@drawable/ripple_effect"
        android:clickable="true"/>

    <TextView
        android:id="@+id/bids"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="Review Requests"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        android:background="@drawable/ripple_effect"
        android:clickable="true"/>

</LinearLayout>