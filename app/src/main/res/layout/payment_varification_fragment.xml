<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Verification"
        android:gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginTop="20dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_payment_verification_sheet"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/teamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Name:           "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/cnic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC:                         "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number:     "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/teamMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Members:            "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount:                    "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/competition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Competition:            "
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/payment_image"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/payment_approved"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:text="Approve"
                    android:background="@drawable/ripple_approve"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/payment_declined"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="60dp"
                    android:text="Decline"
                    android:background="@drawable/ripple_decline"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>